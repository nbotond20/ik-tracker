{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@types/*": ["src/types/*"],
      "@styles/*": ["src/styles/*"],
      "@utils/*": ["src/utils/*"],
      "@server/*": ["src/server/*"],
      "@env/*": ["src/env/*"],
      "@constants/*": ["src/constants/*"],
      "@cypress/*": ["cypress/*"]
    }
  },
  "typeRoots": ["./node_modules/@types", "node_modules/jest/build"],
  "include": ["next-env.d.ts", "**/*.cjs", "**/*.mjs", "**/*.ts", "src/**/*.tsx", "src/**/*.jsx", "cypress.config.ts"],
  "exclude": ["node_modules"]
}
